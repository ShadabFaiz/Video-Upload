{
	"rules": {
		// Rules Specific to Typescript.
		"no-empty-interface": true,
		"no-inferrable-types": true,
		"no-internal-module": true,
		//"no-magic-numbers": true,
		"no-non-null-assertion": true,
		"no-reference": true,
		"no-var-keyword": true,
		"only-arrow-functions": true,
		"prefer-for-of": true,
		// "promise-function-async": true,

		// Rules for Functionalities.
		// "await-promise": [true, "Thennable"],
		"ban-comma-operator": true,
		"curly": [true, "as-needed"],
		"import-blacklist": true,
		"label-position": true,
		"no-conditional-assignment": true,
		"no-construct": true,
		"no-duplicate-switch-case": true,
		"no-dynamic-delete": true,
		"no-empty": [true, "allow-empty-catch"],
		"no-eval": true,
		// "no-floating-promises": [true, "*"],
		"no-invalid-this": true,
		"no-misused-new": true,
		"no-return-await": true,
		"no-shadowed-variable": true,
		"no-string-literal": false,
		"no-string-throw": true,
		"no-switch-case-fall-through": true,
		// "no-unbound-method": true,
		// "no-unnecessary-class": true,
		// "no-unused-variable": true,   depricated
		"no-duplicate-variable": true,
		// "no-unreachable": true,
		// "no-use-before-declare": true,
		"prefer-conditional-expression": [true, "check-else-if"],
		// "restrict-plus-operands": true,
		"switch-default": true,
		"use-isnan": true,
		"triple-equals": [true, "allow-null-check"],

		// Rules for Style.
		"align": [true, "parameters", "members", "arguments", "statements", "elements"],
		"array-type": [true, "array"],
		"arrow-parens": [true, "ban-single-arg-parens"],
		"arrow-return-shorthand": true,
		"binary-expression-operand-order": true,
		"class-name": true,
		"comment-format": [true, "check-space"],
		// "file-name-casing": [true, "camel-case"],
		"import-spacing": true,
		"interface-name": [true, "always-prefix"],
		// "newline-before-return": true,
		"new-parens": true,
		// "no-boolean-literal-compare": true,
		"no-consecutive-blank-lines": true,
		"no-irregular-whitespace": true,
		"no-trailing-whitespace": [true, "ignore-comments"],
		"no-unnecessary-callback-wrapper": true,
		"no-unnecessary-initializer": true,
		// "no-unnecessary-qualifier": true,
		"number-literal-format": true,
		"object-literal-shorthand": true,
		"one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
		"one-variable-per-declaration": [true, "ignore-for-loop"],
		// "ordered-imports": [
		//   true,
		//   {
		//     "import-sources-order": "lowercase-first",
		//     "named-imports-order": "lowercase-first",
		//     "module-source-path": "basename"
		//   }
		// ],
		// "ordered-imports": true,
		"prefer-method-signature": true,
		"prefer-switch": [
			true,
			{
				"min-cases": 4
			}
		],
		"prefer-template": [true, "allow-single-concat"],
		"prefer-while": true,
		"quotemark": [true, "single"],
		// "return-undefined": true,
		"semicolon": [true, "always"],
		"space-before-function-paren": [
			true,
			{
				"anonymous": "always",
				"asyncArrow": "always",
				"named": "always",
				"constructor": "never"
			}
		],
		"switch-final-break": true,
		"indent": true,

		"max-line-length": [true, 100],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"variable-name": [true, "ban-keywords"],
		"whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"]
	}
}
